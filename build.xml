<?xml version="1.0" encoding="UTF-8"?>
<project name="SuperMario2D" basedir=".">
    <description>Builds, tests, and runs the project SuperMario2D.</description>
    <target name="clean">
        <delete dir="build"/>
    </target>
    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>
    <target name="jar">
        <mkdir dir="build"/>
        <jar jarfile="build/SuperMario2D.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="com.TETOSOFT.tilegame.GameEngine"/>
            </manifest>
        </jar>
    </target>
    <target name="copy-media">
        <copy todir="build/images">
            <fileset dir="images" includes="**"/>
        </copy>
        <copy todir="build/maps">
            <fileset dir="maps" includes="**"/>
        </copy>
    </target>
    <target name="run">
        <java jar="build/SuperMario2D.jar" fork="true"/>
    </target>
</project>
